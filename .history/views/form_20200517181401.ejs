        <form method='post'>
            <div class="form-group row">
                <label for="inputMarque" class="col-sm-2 col-form-label">Marque</label>
                <div class="col-sm-10">
                  <input type="marque" class="form-control" id="inputMarque" name='marque' value="<%= acheter.marque %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputModele" class="col-sm-2 col-form-label">Modèle</label>
                <div class="col-sm-10">
                  <input type="modele" class="form-control" id="inputModèle" name='modele' value="<%= acheter.modele %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputAnnee" class="col-sm-2 col-form-label">Année</label>
                <div class="col-sm-10">
                  <input type="annee" class="form-control" id="inputAnnée" name='annee' value="<%= acheter.annee %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputKilometrage" class="col-sm-2 col-form-label">Kilométrage</label>
                <div class="col-sm-10">
                  <input type="kilometrage" class="form-control" id="inputKilometrage" name='kilometrage' value="<%= acheter.kilometrage %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPrix" class="col-sm-2 col-form-label">Prix</label>
                <div class="col-sm-10">
                  <input type="prix" class="form-control" id="inputPrix" name='prix' value="<%= acheter.prix %>">
            </div>
